# Application
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=heartie_db

# Redis (Queues / BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=change_me_access
JWT_EXPIRATION_TIME=3600s
JWT_REFRESH_SECRET=change_me_refresh
JWT_REFRESH_EXPIRATION_TIME=7d

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_AD_MODEL=gemini-2.0-flash
GEMINI_ADMIN_MODEL=gemini-2.0-flash
GEMINI_REVIEW_MODEL=gemini-1.5-pro

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_TOPIC=admin-orders

# Facebook Ads (optional)
FB_GRAPH_API_URL=https://graph.facebook.com/v24.0
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=

# CORS (comma-separated origins, leave empty to allow all)
CORS_ORIGINS=http://localhost:3000
